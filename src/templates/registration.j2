{% extends "base.j2" %}

{% block body %}
<h1>Регистрация</h1>

<form action="{{ url_for('registration') }}" method="post">
    {{ form.hidden_tag() }}
    {% for field in form if field.widget.input_type != 'hidden' -%}
        <div class="mb-3">
            {{ field.label }}
            {{ field(class_="form-control") }}
            {% if field.errors %}
                {% for err in field.errors %}
                    <span style="color: red">
                        {{ err }}
                      </span>
                {% endfor %}
            {%- endif %}
        </div>
    {%- endfor %}

    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>

<p>
	Идите обратно на <a href="{{ url_for('index') }}">главную страницу</a>
    или <a href="{{ url_for('login') }}">зайдите в профиль</a>
</p>
{% endblock %}